<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MercylineProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MercylineProject" parent="Base.Theme.MercylineProject" />
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize16Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16%</item>
    </style>
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="july_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-medium</item> <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="below_15_im_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item> <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="water_level_message_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item> <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.Header" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-bold</item> <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Subheader" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-medium</item> <item name="android:textColor">@color/grey_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.CardTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-bold</item> <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.CardStatus" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif</item> <item name="android:textSize">14sp</item>
    </style>
</resources>